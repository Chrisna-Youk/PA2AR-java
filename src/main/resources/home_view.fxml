<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.dnc.ui.FoodTruckCard?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.dnc.HomeController"
            prefWidth="1000.0" prefHeight="650.0">

    <top>
        <ToolBar>
            <Label text="DnC" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#onLogout"/>
        </ToolBar>
    </top>

    <center>
        <TabPane fx:id="tabPane">
            <!-- Onglet 1 : Événements -->
            <Tab text="Événements" closable="false">
                <fx:include source="/events_view.fxml"/>
            </Tab>

            <!-- Onglet 2 : MaCarte -->
            <Tab text="MaCarte" closable="false">
                <fx:include source="/loyalty_view.fxml"/>
            </Tab>

            <!-- Onglet 3 : Les Foodtrucks -->
            <Tab text="Les Foodtrucks" closable="false">
                <ScrollPane fx:id="trucksScroll" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                    <content>
                        <TilePane fx:id="cardsPane" hgap="24" vgap="24" prefColumns="3">
                            <padding><Insets topRightBottomLeft="20"/></padding>
                            <!-- Laisse vide : le contrôleur ajoute les FoodTruckCard dynamiquement -->
                        </TilePane>
                    </content>
                </ScrollPane>
            </Tab>
        </TabPane>
    </center>

    <padding><Insets topRightBottomLeft="12"/></padding>
</BorderPane>
