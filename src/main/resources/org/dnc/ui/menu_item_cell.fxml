<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            styleClass="menu-card">

    <center>
        <VBox spacing="6.0">
            <Label fx:id="nameLabel"  styleClass="menu-name"/>
            <Label fx:id="priceLabel" styleClass="menu-price"/>
            <Label fx:id="descLabel"  wrapText="true"/>
        </VBox>
    </center>

    <right>
        <StackPane prefWidth="140" prefHeight="160" StackPane.alignment="CENTER">

            <BorderPane.margin>
                <Insets left="12"/>
            </BorderPane.margin>

            <ImageView fx:id="photo" fitWidth="120" fitHeight="120" preserveRatio="true"/>
            <Label fx:id="placeholderLabel" text="Photo du plat"/>

            <!-- bouton + -->
            <Button fx:id="addBtn" text="+" StackPane.alignment="BOTTOM_RIGHT"
                    styleClass="fab fab-add"/>
        </StackPane>
    </right>

    <padding><Insets topRightBottomLeft="16"/></padding>
</BorderPane>
