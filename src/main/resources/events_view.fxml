<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets topRightBottomLeft="16"/></padding>

    <Label text="Événements à venir" styleClass="title"/>

    <HBox spacing="8.0">
        <TextField promptText="Rechercher un événement..."/>
        <DatePicker promptText="Du"/>
        <DatePicker promptText="Au"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Ajouter"/>
        <Button text="Modifier" disable="true"/>
        <Button text="Supprimer" disable="true"/>
    </HBox>

    <TableView VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Titre" prefWidth="240.0"/>
            <TableColumn text="Date début" prefWidth="140.0"/>
            <TableColumn text="Date fin" prefWidth="140.0"/>
            <TableColumn text="Lieu" prefWidth="180.0"/>
        </columns>
        <placeholder>
            <Label text="Aucun événement pour le moment."/>
        </placeholder>
    </TableView>
</VBox>
